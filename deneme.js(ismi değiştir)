import React from 'react';
import { View, Text, FlatList, StyleSheet, TouchableOpacity } from 'react-native';

// Sample data to showcase in bubbles
const data = [
  { id: '1', title: 'IgA', description: 'Açıklama Ekle' },
  { id: '2', title: 'IgM', description: 'a' },
  { id: '3', title: 'IgG', description: 'a' },
  { id: '4', title: 'IgG1', description: 'a' },
  { id: '5', title: 'IgG2', description: 'a' },
];

const BubbleShowcase = () => {
  const renderItem = ({ item }) => {
    return (
      <TouchableOpacity style={styles.bubble}>
        <Text style={styles.title}>{item.title}</Text>
        <Text style={styles.description}>{item.description}</Text>
      </TouchableOpacity>
    );
  };

  return (
    <View style={styles.container}>
      <FlatList
        data={data}
        renderItem={renderItem}
        keyExtractor={(item) => item.id}
        contentContainerStyle={styles.list}
      />
    </View>
  );
};

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: '#f9f9f9',
    paddingTop: 50,
    paddingHorizontal: 20,
  },
  list: {
    paddingBottom: 20,
  },
  bubble: {
    backgroundColor: '#FF6347',
    borderRadius: 30,
    padding: 20,
    marginBottom: 15,
    elevation: 5, // Gives a nice shadow for the bubble effect
    shadowColor: '#000',
    shadowOpacity: 0.1,
    shadowRadius: 5,
    shadowOffset: {
      width: 0,
      height: 4,
    },
  },
  title: {
    fontSize: 18,
    color: '#fff',
    fontWeight: 'bold',
  },
  description: {
    fontSize: 14,
    color: '#fff',
    marginTop: 5,
  },
});

export default BubbleShowcase;
